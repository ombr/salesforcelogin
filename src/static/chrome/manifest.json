{
  "name": "Salesforce login extention",
  "version": "1",
  "manifest_version": 2,
  "description": "A better login experience for salesforce",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Salesforce Login"
  },
  "content_scripts": [
    {
      "matches": [ "https://login.salesforce.com/"],
      "js": ["login.salesforce.com.js"]
    },
    {
      "matches": [ "https://salesforcelogin.github.io/"],
      "js": ["login.js"]
    }
  ]
}
